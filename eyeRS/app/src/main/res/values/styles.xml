<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeRed" parent="AppTheme">
        <item name="colorPrimary">@color/eyeRSRed</item>
        <item name="colorPrimaryDark">@color/eyeRSGrey</item>
        <item name="colorAccent">@color/eyeRSDarkRed</item>
        <item name="android:textColorPrimary">@color/eyeRSBlack</item>
    </style>

    <style name="AppThemeYellow" parent="AppThemeYellow">
        <item name="colorPrimary">@color/eyeRSYellow</item>
        <item name="colorAccent">@color/eyeRSDarkYellow</item>
        <item name="android:windowBackground">@color/eyeRSDarkGrey</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppThemeGreen" parent="AppThemeGreen">
        <item name="colorPrimary">@color/eyeRSGreen</item>
        <item name="colorPrimaryDark">@color/eyeRSDarkGrey</item>
        <item name="colorAccent">@color/eyeRSDarkGreen</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>


</resources>
